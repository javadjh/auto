<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainApp.fileManager.view.FileManegerFragment">
    <data>
        <variable
            name="FileManagerVM"
            type="com.scanner.demo.mainApp.fileManager.viewmodel.FileManagerVM" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:id="@+id/recyFiles"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                android:orientation="vertical"
                android:paddingStart="20dp"
                tools:listitem="@layout/item_appendix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"
                    android:id="@+id/addNewFile"
                    app:backgroundTint="@color/purple"
                    android:layout_above="@id/menuAction"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/menuAction"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/radius"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    app:cardBackgroundColor="@color/lightBlack"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textDirection="rtl"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/fileManagerIcon"
                            android:src="@drawable/ic_folder"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:tint="@color/purple" />
                        <ImageView
                            android:id="@+id/archiveIcon"
                            android:src="@drawable/ic_folderd"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:tint="@color/white" />
                        <ImageView
                            android:id="@+id/kartableIcon"
                            android:src="@drawable/ic_email_envelope"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:tint="@color/white" />
                        <ImageView
                            android:id="@+id/homePageIcon"
                            android:src="@drawable/ic_home"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            app:tint="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>
</layout>
