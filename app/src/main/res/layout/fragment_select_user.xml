<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainApp.letterSingle.action.view.SelectUserBottomSheet">
    <data>
        <variable
            name="UsersResponseRoot"
            type="com.scanner.demo.mainApp.kartable.upsertLetter.model.UsersResponseRoot" />
    </data>
    <FrameLayout
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="@dimen/cardRadius"
            app:cardElevation="@dimen/cardElevation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:textDirection="rtl"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/viewBottomSheet"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/style_circle"
                    android:layout_width="80dp"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:textDirection="rtl"
                    android:layoutDirection="rtl"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/viewBottomSheet"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:fontFamily="@font/vazir"
                        android:textColorHint="@color/white"
                        android:hint="@string/searchInUSers"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/style_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:id="@+id/userChoised"
                        tools:listitem="@layout/item_simple_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:paddingTop="20dp"
                                android:id="@+id/recyUsers"
                                android:layoutDirection="rtl"
                                android:textDirection="rtl"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_users"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
                <TextView
                    android:id="@+id/doneUsersChoised"
                    android:textSize="@dimen/titleSize"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/vazir"
                    android:text="@string/choised"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>
