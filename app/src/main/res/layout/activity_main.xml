<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include layout="@layout/upload_file_menu"
        android:id="@+id/uploadMenu"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_below="@id/uploadMenu"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/addTextBlock"
            android:layout_marginTop="10dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/textContent"
                android:textColor="@color/white"
                android:fontFamily="@font/vazir"
                android:textColorHint="@color/gray"
                android:hint="اضافه کردن متن"
                android:layout_marginStart="10dp"
                android:background="@drawable/style_edit_text"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/addText"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/vazir"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:text="ثبت"
                android:background="@drawable/style_button"
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ja.burhanrashid52.photoeditor.PhotoEditorView
            android:id="@+id/scannedImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/mediaButton"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/vazir"
            android:text="انتخاب از گالری"
            android:background="@drawable/style_button"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/cameraButton"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/vazir"
            android:text="اضاف کردن دوربین"
            android:background="@drawable/style_button"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
