<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="listReceiveLetter"
            type="com.scanner.demo.mainApp.homePage.model.ListLetter" />
    </data>
    <androidx.cardview.widget.CardView
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:id="@+id/cardLetter"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="@dimen/radius"
        app:cardElevation="@dimen/cardElevation"
        android:layout_marginBottom="10dp"
        android:layout_height="140dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/style_radius"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:setProfileLetterList="@{listReceiveLetter.sender.profile}"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:id="@+id/profile_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/del"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/gray"/>
            <LinearLayout
                android:textDirection="rtl"
                android:layoutDirection="rtl"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/mediumSize"
                        android:fontFamily="@font/vazir"
                        android:textColor="@color/white"
                        android:text="@{listReceiveLetter.sender.fullName}"
                        android:layout_width="0dp"
                        android:layout_weight="100"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/titleSize"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:text="@{listReceiveLetter.title}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/mediumSize"
                    android:id="@+id/contextLetter"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/gray"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/sendTimeSingleLetter"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_clock"
                            android:layout_width="15dp"
                            app:tint="@color/white"
                            android:layout_height="15dp"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/smallSize"
                            android:fontFamily="@font/vazir"
                            android:textColor="@color/white"
                            android:text="@{listReceiveLetter.actionMadeTime}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calendar"
                            android:layout_width="15dp"
                            app:tint="@color/white"
                            android:layout_height="15dp"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/smallSize"
                            android:fontFamily="@font/vazir"
                            android:textColor="@color/white"
                            android:text="@{listReceiveLetter.actionMadeDate}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
