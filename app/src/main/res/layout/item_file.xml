<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="FileList"
            type="com.scanner.demo.mainApp.fileManager.model.FileList" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDownloadFile"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        app:cardBackgroundColor="@color/lightBlack"
        app:cardCornerRadius="@dimen/cardRadius"
        android:layout_marginBottom="10dp"
        app:cardElevation="@dimen/cardElevation"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageFileType"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <TextView
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/mediumSize"
                android:fontFamily="@font/vazir"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="@{`نام : ` + FileList.title}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/mediumSize"
                android:fontFamily="@font/vazir"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:text="@{FileList.formatFileSize}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/mediumSize"
                android:fontFamily="@font/vazir"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:text="@{FileList.date + ` - ` + FileList.time}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
